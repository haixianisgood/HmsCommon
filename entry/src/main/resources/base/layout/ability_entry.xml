<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">
    <binddata>
        <variable
            class="com.example.hmscommon.slice.ViewModel"
            name="viewModel"/>
    </binddata>

    <Text
        ohos:id="$+id:result"
        ohos:text="${viewModel.activeData}"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text_alignment="center"
        ohos:text_size="25vp"
        ohos:text_cursor_visible="false"
        ohos:text_color="$color:lv_1"
        ohos:top_margin="50vp"/>

    <Button
        ohos:id="$+id:button"
        ohos:background_element="$graphic:shape_login_button"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:left_padding="20vp"
        ohos:right_padding="20vp"
        ohos:top_padding="5vp"
        ohos:bottom_padding="5vp"
        ohos:text_size="25vp"
        ohos:text_color="$color:lv_1"
        ohos:padding_for_text="true"
        ohos:text="增加10"
        ohos:text_alignment="center"/>


</DirectionalLayout>